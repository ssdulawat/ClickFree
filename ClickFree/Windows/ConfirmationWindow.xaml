<Window x:Class="ClickFree.Windows.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickFree.Windows"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="ConfirmationWindow"
        Loaded="Window_Loaded"
        Style="{StaticResource ConfirmationWindowStyle}">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Name="FormatPanel" Visibility="Visible">

            <TextBlock HorizontalAlignment="Center" FontSize="24" Margin="20">
                <Run Text="Are you sure to format the USB?" FontFamily="Josefin Sans" Foreground="White" />
            </TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="yesBtn" Content="Yes" Style="{StaticResource SettingsViewRoundButtonStyle}" HorizontalAlignment="Center"
                    Margin="20" Width="100" Click="YesButton_Click"/>
                <Button Content="No" Style="{StaticResource SettingsViewRoundButtonStyle}" HorizontalAlignment="Center"
                    Margin="20" Width="100" Click="NoButton_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>

        <Grid Grid.Row="2" Margin="10,40,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"   >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto">
                </ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="/Resources/ChatIcon.jpg" Width="30" Grid.Column="0"  Height="30"   />

            <Label x:Name="ChatBestwaylbl" Content="Chat Best Way :" FontSize="14"  Grid.Column="1"
                       VerticalAlignment="Bottom" HorizontalAlignment="Center" FontFamily="Josefin Sans" Foreground="White" />



            <TextBlock FontSize="14"  Grid.Column="2"
                        HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Josefin Sans" Background="Transparent"  Foreground="White">
                <Hyperlink >
                    <TextBlock Text="Click Here" />
                </Hyperlink>
            </TextBlock>

            <Image Source="/Resources/EmailIcon.png" Width="30" Height="30" Grid.Column="0"  />

            <Label x:Name="ContactEmaillbl" Content="Email :" FontSize="14" VerticalAlignment="Top" Grid.Column="1" HorizontalAlignment="Center" FontFamily="Josefin Sans" 

             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClickFree.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="185" d:DesignWidth="230">
    <Border CornerRadius="4" Height="185" Width="230" BorderBrush="#33383E" Background="#1C1E20" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="test" FontSize="10" Foreground="White" LineHeight="20" VerticalAlignment="Center" TextAlignment="Left" Margin="11,0,0,0"
                       TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Height="14"/>

            <Rectangle Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                       Height="1" Fill="#33383E"/>

            <ListBox Grid.Row="2" Background="Transparent" BorderThickness="0">
                
            </ListBox>
        </Grid>
    </Border>
</UserControl>
